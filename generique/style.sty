% Commande pour configurer les en-têtes et pieds de page
\newcommand{\setupheaders}[2]{%
	\pagestyle{fancy}
	\fancyhf{}
	\renewcommand{\headrulewidth}{0.4pt}
	\fancyhead[L]{#1}  % En-tête gauche
	\fancyhead[R]{#2}  % En-tête droite
	\fancyfoot[C]{\thepage}
}

